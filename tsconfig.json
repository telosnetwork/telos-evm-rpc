{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "typeRoots": [
      "../../../types",
      "node_modules/@types",
      "types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
